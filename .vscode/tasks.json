{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Quick Commit + Push",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/git_quick_commit_push.ps1",
        "-Message",
        "${input:commitMessage}"
      ],
      "group": "none",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Commit message",
      "default": "wip: keep changes"
    }
  ]
}
