{
  // === Copilot Multi-Agent Topology Settings ===
  // Enable session list for audit and handoff visibility
  "chat.viewSessions.enabled": true,
  // Enable agent type selection in chat dropdown
  "chat.agentsControl.enabled": true,
  // Enable Copilot agents (Local, Background, Cloud)
  "chat.agent.enabled": true,

  // === Editor Defaults ===
  "files.encoding": "utf8",
  "files.eol": "\n",

  // === Python ===
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests/", "-v"],

  // === Markdown ===
  "markdown.validate.enabled": true
}
