{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "trading-bot/promotion-checklist/v1.0.0",
  "title": "Promotion Checklist",
  "type": "object",
  "required": [
    "checklist_version",
    "generated_at",
    "strategy",
    "base_currency",
    "pre_paper_checks",
    "in_paper_checks",
    "exit_criteria",
    "paper_readiness_failures",
    "overall_ready",
    "decision"
  ],
  "additionalProperties": true,
  "properties": {
    "checklist_version": {
      "type": "string",
      "enum": ["1.0.0"]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "strategy": {
      "type": "string",
      "minLength": 1
    },
    "base_currency": {
      "type": "string",
      "enum": ["USD", "GBP", "EUR"]
    },
    "summary_json_path": {
      "type": ["string", "null"]
    },
    "pre_paper_checks": {
      "type": "array",
      "items": { "$ref": "#/definitions/checkItem" }
    },
    "in_paper_checks": {
      "type": "array",
      "items": { "$ref": "#/definitions/checkItem" }
    },
    "exit_criteria": {
      "type": "array",
      "items": { "$ref": "#/definitions/checkItem" }
    },
    "paper_readiness_failures": {
      "type": "array",
      "items": { "type": "string" }
    },
    "overall_ready": {
      "type": "boolean"
    },
    "decision": {
      "type": "string",
      "enum": ["READY", "NOT_READY"]
    }
  },
  "definitions": {
    "checkItem": {
      "type": "object",
      "required": ["id", "label", "required", "status", "evidence"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "required": { "type": "boolean" },
        "status": { "type": "string", "enum": ["pending", "pass", "fail"] },
        "evidence": {}
      }
    }
  }
}
