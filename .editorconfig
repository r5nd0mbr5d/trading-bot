# EditorConfig for trading-bot
# Works with VS Code (via EditorConfig extension) and most other editors
# docs: https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve markdown two-space line breaks

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
